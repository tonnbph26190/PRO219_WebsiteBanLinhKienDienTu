@model IEnumerable<PRO219_WebsiteBanDienThoai_FPhone.Models.CartDetailModel>

@using AppData.FPhoneDbContexts;

@{
    
    ViewData["Title"] = "Cart";
    FPhoneDbContext dbContext = new FPhoneDbContext();

}
<!-- Bao gồm thư viện Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.3/dist/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<!-- Bao gồm thư viện Bootstrap JavaScript -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
@if (Model == null){
    <h2 style="text-align:center"> Hiện đang Không có sản phẩm trong giỏ hàng của bạn  </h2>
}else {
<main id="main">
    <section class="section cart__area">
        <div class="container">
            <div class="responsive__cart-area">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <form class="cart__form">
                    <div class="cart__table table-responsive">
                        <table width="100%" class="table">
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Màu sắc</th>
                                    <th>RAM</th>
                                    <th>Giá</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var idsp = dbContext.PhoneDetailds.FirstOrDefault(p => p.Id == item.phoneDetaild.Id).IdPhone;
                                    var gia = dbContext.PhoneDetailds.FirstOrDefault(p => p.Id == item.phoneDetaild.Id);
                                    string anhsp = dbContext.Phones.FirstOrDefault(p => p.Id == idsp).Image;
                                    var tensp = dbContext.Phones.FirstOrDefault(p => p.Id == idsp).PhoneName;
                                    var idcolor = dbContext.PhoneDetailds.FirstOrDefault(p => p.Id == item.phoneDetaild.Id).IdColor;
                                    var idRam = dbContext.PhoneDetailds.FirstOrDefault(p => p.Id == item.phoneDetaild.Id).IdRam;
                                    var color = dbContext.Colors.FirstOrDefault(p => p.Id == idcolor).Name;
                                    var Ram = dbContext.Ram.FirstOrDefault(p => p.Id == idRam).Name;

                                    <tr>
                                        <td class="product__thumbnail">
                                            <a href="#">
                                                <img src="@Url.Content(anhsp)" id="pic" />
                                            </a>
                                        </td>
                                        <td class="product__name">
                                            @tensp
                                        </td>
                                        <td class="product__name">
                                            @color
                                        </td>
                                        <td class="product__quantity">
                                            @Ram
                                        </td>
                                        <td class="product__subtotal">
                                          
                                            <div class="price">
                                                <span class="new__price">@(gia.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</span>
                                            </div>
                                           
                                        </td>
                                        <td>
                                               <a class="btn-confirm" href="@Url.Action("DeleteCart", "Accounts", new { id = item.phoneDetaild.Id })" style="color:red">
                                              <i class="fas fa-trash" ></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="cart-btns">
                        <div class="continue__shopping">
                            <a href="/">Tiếp tục mua sắm</a>
                        </div>
                        <div class="continue__shopping">
                            <a asp-action="checkoutID" asp-controller="Accounts">Tiến hành thanh toán</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </section>
    <script>
        $(document).ready(function () {
            $('.toast').toast('show');
        });
    </script>
</main>
}<script>
     $(document).ready(function () {
         $('.btn-confirm').click(function (e) {
             e.preventDefault();
             var url = $(this).attr('href');

             // Hiển thị hộp thoại xác nhận
             Swal.fire({
                 title: 'Xác nhận',
                 text: 'Bạn có chắc muốn xóa sản phẩm khỏi giỏ hàng không?',
                 icon: 'question',
                 showCancelButton: true,
                 confirmButtonText: 'OK',
                 cancelButtonText: 'Hủy'
             }).then((result) => {
                 if (result.isConfirmed) {
                     // Nếu người dùng chọn "OK", gửi yêu cầu Ajax
                     $.ajax({
                         type: 'POST', // hoặc 'GET' tùy thuộc vào cách bạn xử lý ở server
                         url: url,
                         success: function (data) {
                             // Xử lý reload trang và hiển thị thông báo thành công
                             if (data.success) {
                                 Swal.fire({
                                     icon: 'success',
                                     title: 'Thành công!',
                                     text: 'Thay đổi đã được lưu thành công.',
                                     showConfirmButton: false,
                                     timer: 1500,
                                     onClose: function () {
                                         location.reload();
                                     }
                                 });
                             } else {
                                 alert('Chuyển trạng thái thất bại');
                             }
                         },
                         error: function () {
                             alert('Đã xảy ra lỗi');
                         }
                     });
                 }
             });
         });
     });
</script>

