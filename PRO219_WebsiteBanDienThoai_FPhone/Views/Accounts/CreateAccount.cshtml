@model AppData.ViewModels.Accounts.ClAccountsViewModel
@{
    ViewData["Title"] = "CreateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-control{
        font-size: 1.5rem;
        --bs-btn-line-height: 2.3;
    }

    .btn-lg { 
        --bs-btn-font-size: 1.5rem;
 
    }
</style>
<section style="background-color: #eee; padding-top: 50px; padding-bottom:50px">
    <div class="container h-100">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Tạo tài khoản</p>
                    <form asp-action="CreateAccount" method="post">
                        <div class="row justify-content-center ">
                            <div class="col-4">
                                <label asp-for="Name" class="label-control "></label>
                                <input asp-for="Name" class="form-control input-lg" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-4">
                                <label asp-for="Username" class="label-control"></label>
                                <input asp-for="Username" class="form-control"/>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-4 mt-4">
                                <label asp-for="PhoneNumber" class="label-control col"></label>
                                <input asp-for="PhoneNumber" class="form-control"/>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                           
                            <div class="col-4 mt-4">
                                <label asp-for="Email" class="label-control"></label>
                                <input type="email" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                           
                            <div class="col-4 mt-4">
                                <label  asp-for="Password" class="label-control"></label>
                                <input type="password" asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-4 mt-4">
                                <label asp-for="CfPassword" class="label-control"></label>
                                <input type="password" asp-for="CfPassword" class="form-control" />
                                <span asp-validation-for="CfPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group text-center my-5">
                            <input type="submit" value="Tạo tài khoản" class="btn btn-primary btn-lg"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>