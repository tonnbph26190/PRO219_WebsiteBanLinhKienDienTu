<header id="header" class="header">
    <div class="navigation">
        <div class="container">
            <nav class="nav">
                <div class="nav__hamburger">
                    <svg>
                        <use xlink:href="/images/sprite.svg#icon-menu"></use>
                    </svg>
                </div>

                <div class="nav__logo">
                    <a asp-action="Index" asp-controller="Home">
                        FPHONE
                    </a>
                </div>

                <div class="nav__menu">
                    <div class="menu__top">
                        <span class="nav__category">PHONE</span>
                        <a href="#" class="close__toggle">
                            <svg>
                                <use xlink:href="./images/sprite.svg#icon-cross"></use>
                            </svg>
                        </a>
                    </div>
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item mx-4 ">
                                    <a class="nav-link text-black" asp-action="Index" asp-controller="Home">Trang chủ</a>
                                </li>
                                <li class="nav-item mx-4">
                                    <a class="nav-link text-black" asp-action="Index" asp-controller="ListPhone">Sản phẩm</a>
                                </li>
                             @*    <li class="nav-item mx-4 ">
                                    <a class="nav-link text-black" asp-action="Index" asp-controller="Discount">Voucher</a>
                                </li> *@
                                <li class="nav-item mx-4">
                                    <a class="nav-link text-black" asp-action="Index" asp-controller="Blogs">Tin tức</a>
                                </li>
                                <li class="nav-item mx-4 ">
                                    <a class="nav-link text-black" asp-action="Index" asp-controller="Contact">Liên hệ</a>
                                </li>
                               
                            </ul>
                        </div>
                    </nav>
                </div>

                <div class="nav__icons">
                    @if (UserClaim.HasRole(User, "User"))
                    {
                        <a asp-action="Profile" asp-route-id="" asp-controller="Accounts" class="icon__item" id="">
                            <svg class="icon__user">
                                <use xlink:href="/images/sprite.svg#icon-user"></use>
                            </svg>
                        </a>
                    }
                    else if (!UserClaim.HasRole(User, "User"))
                    {
                        <a asp-controller="Accounts" asp-action="Login" class="icon__item" id="login-btn">
                            <svg class="icon__user">
                                <use xlink:href="/images/sprite.svg#icon-user"></use>
                            </svg>
                        </a>
                    }
                    <a href="#" class="icon__item" id="search-btn">
                        <svg class="icon__search">
                            <use xlink:href="/images/sprite.svg#icon-search"></use>
                        </svg>
                    </a>

                    <a asp-action="Cart" asp-controller="Accounts" class="icon__item" id="cart-btn">
                        <svg class="icon__cart">
                            <use xlink:href="/images/sprite.svg#icon-shopping-basket"></use>
                        </svg>

                        <span style="background-color: chocolate; " id="cart__total">@ViewBag.a</span>
                    </a>
                </div>
            </nav>
        </div>
    </div>
    

